<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 2000px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 12px;
            text-align: left;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
        a {
            text-decoration: none;
            color: #4CAF50;
        }
        .btn {
            display: inline-block;
            padding: 6px 12px;
            background-color: #4CAF50;
            color: white;
            border-radius: 4px;
            text-align: center;
        }
        .btn:hover {
            background-color: #45a049;
        }
        .center {
            text-align: center;
        }
    </style>
</head>
<body>
    
<div class="container">
    <h1>User List</h1>
    <p class="center"><a href="/admin" class="btn">Trở lại</a></p>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Role</th>
                <!-- <th>At-time</th>
                <th>Image</th>
                <th>Trạng thái</th>
                <th>Loại tin</th> -->
                <th colspan="2">Option</th>
            </tr>
        </thead>
        <tbody>
            <% for (const user of user_regis) { %>
            <tr>
                <td><%= user._id %></td>
                <td><%= user.Username %></td>
                <td><%= user.Password %></td>
                <td><%= user.Email %></td>

                <td>
                    <select>
                        <option><%= user.Role %></option>
                    </select>
                </td>
                </td>
                <td><a href="/delete_user/<%= user._id %>" class="btn">Xóa</a></td>
                <td><a href="/admin/update_user/<%= user._id %>" class="btn">Update</a></td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>

</body> 
</html>
