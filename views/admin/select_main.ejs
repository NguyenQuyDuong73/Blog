<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Blog List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 2000px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 12px;
            text-align: left;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
        a {
            text-decoration: none;
            color: #4CAF50;
        }
        .btn {
            display: inline-block;
            padding: 6px 12px;
            background-color: #4CAF50;
            color: white;
            border-radius: 4px;
            text-align: center;
        }
        .btn:hover {
            background-color: #45a049;
        }
        .center {
            text-align: center;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>MainBlog List</h1>
    <p class="center"><a href="/admin" class="btn">Trở lại</a></p>
  
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Writer</th>
                <th>Title</th>
                <th>Briefnews</th>
                <th>Content</th>
                <th>At-time</th>
                <th>Image</th>
                <th>Trạng thái</th>

            </tr>
        </thead>
        <tbody>
            <% for (const blog of blogs) { %>
            <tr>
                <td><%= blog._id %></td>
                <td><%= blog.Writer %></td>
                <td><%= blog.Title %></td>
                <td><%= blog.Briefnews %></td>
                <td><%= blog.Content %></td>
                <td><%= blog.Attime %></td>
                <td><img src="<%= blog.image %>" height="210" width="250"></td>
                <td>
                    <select>
                        <option><%= blog.Status %></option>
                    </select>
                </td>

            </tr>
            <% } %>
        </tbody>
    </table>


</div>
</body>
</html>
